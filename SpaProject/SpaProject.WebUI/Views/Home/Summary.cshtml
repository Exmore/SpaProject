@using SpaProject.Domain.Models;
@model IEnumerable<UserWithDepartment>

<div class="panel-heading">Все заказы</div>
<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr><th>ID</th><th>Имя</th><th>Департамент</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.DepartmentName</td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit",
                            new { id = item.Id },
                            new { @class = "btn btn-xs btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Удалить", "Remove",
                            new { id = item.Id },
                            new { @class = "btn btn-xs btn-primary" })
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>